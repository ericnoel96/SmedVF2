@model IEnumerable<Smed.Models.Estado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
        <td>
            @if (Request.IsAuthenticated && User.IsInRole("Med"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.EstadoId })
            }
            |
            @Html.ActionLink("Details", "Details", new { id = item.EstadoId }) |
            @if (Request.IsAuthenticated && User.IsInRole("Med"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.EstadoId })
            }
            </td>
    </tr>
}

</table>
