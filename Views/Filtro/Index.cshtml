@model IEnumerable<Smed.Models.Covid>

@{
    ViewBag.Title = "Index";
}

<h2>Busqueda</h2>
@using (Html.BeginForm("Index", "Filtro", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading">
            Reporte Pacientes
        </div>
        <div class="panel-body">
            <div class="form-inline">
                @Html.Label("Estado del Paciente:")
                @Html.DropDownList("Estado", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.Label("Fecha de Ingreso:")
                @Html.DropDownList("FechaIngreso", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                @Html.Label("Fecha de Salida:")
                @Html.DropDownList("FechaSalida", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                <div>
                    @Html.Label("Cedula:")
                    @Html.DropDownList("Cedula", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                </div>
                <div>
                    @Html.Label("Medicacion:")
                    @Html.DropDownList("Medicacion", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                </div>
                <div>
                    @Html.Label("Observacion:")
                    @Html.DropDownList("Observacion", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                </div>
                <div>
                    @Html.Label("Tratamiento:")
                    @Html.DropDownList("Tratamiento", null, "-- Seleccione --", new { htmlAttributes = new { @class = "control-label col-md-2" } })
                </div>
                <div>
                    @Html.Label("Dias en el hospital:")
                    @Html.TextBox("Dias", "", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-inline">
                <button type="submit" class="btn btn-default">Buscar</button>
            </div>
        </div>
    </div>
}
@Html.Partial("_Covid", (List<Smed.Models.Covid>)ViewBag.MiListado)
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section scripts{
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    
    Scripts.Render("~/bundles/jqueryval")
    <script>
            $(document).ready(function () {
                $(".datepicker").datepicker({
                    dateFormat: "dd/mm/yy",
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-60:+0"
                });

            });
        </script>
}